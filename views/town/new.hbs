<section class="flex-column">
  <h1 class="is-size-1">{{name}}</h1>
  <form action="/{{this.id}}" method="post" id='newHouse'>
    <label class="label">Name:</label>
    <input type="text" name="name" placeholder="name" class="input">
    <label class="label">Residents:</label>
    <textarea rows="2" cols="50" name="residents" form="newHouse" placeholder="Enter names seperated by commas" class="textarea"></textarea>
    <label class="label">Password:</label>
    <input type="password" name="key" placeholder="password" class="input">
    <p>
      <input type="submit" value="CREATE" class="button is-primary edit-buttons">
    </p>
  </form>
</section>