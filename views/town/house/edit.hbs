<section class="flex-column">
  <h1 class="is-size-1">{{house.name}}</h1>
  <form action="{{towns/town.id/house.id}}?_method=put" method="POST">
    <p>Name:</p>
    <input type="text" name="name" placeholder="name" value="{{house.name}}">
    <p>Residents:</p>
    <textarea rows="2" cols="50" name="residents" placeholder="Enter names seperated by commas">{{house.residents}}</textarea>
    <p>
      <input type="submit" value="Update">
    </p>
  </form>

  <form action="{{town.id/house.id}}?_method=delete" method="POST" id="newHouse">
    <input type="submit" value="Delete">
    </p>
  </form>
</section>